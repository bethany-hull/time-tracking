# Copy this file to .env and add your actual values
# Do NOT commit .env to version control

# ============================================
# OPTION 1: Use Cloud Run Backend (Recommended)
# ============================================
# Set your Cloud Run URL after deployment
# Example: https://time-tracking-api-xxxxx-uc.a.run.app
EXPO_PUBLIC_BACKEND_URL=http://localhost:8080

# Set to 'false' to use direct Gemini API instead of backend
# EXPO_PUBLIC_USE_BACKEND=false

# ============================================
# OPTION 2: Direct Gemini API (Legacy/Fallback)
# ============================================
# Only needed if EXPO_PUBLIC_USE_BACKEND=false
# Warning: API key will be exposed in the client app
EXPO_PUBLIC_GEMINI_API_KEY=your_api_key_here
